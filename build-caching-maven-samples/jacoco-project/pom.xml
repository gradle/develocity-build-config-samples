<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd https://www.gradle.com/gradle-enterprise-maven-project https://www.gradle.com/schema/gradle-enterprise-maven-project.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>jacoco-project</artifactId>
    <packaging>pom</packaging>

    <parent>
        <groupId>com.example</groupId>
        <artifactId>gradle-enterprise-maven-caching-sample</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <modules>
        <module>coverage-report</module>
        <module>util</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.10</version>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.gradle</groupId>
                    <artifactId>gradle-enterprise-maven-extension</artifactId>
                    <configuration>
                        <gradleEnterprise xmlns="https://www.gradle.com/gradle-enterprise-maven-project">
                            <plugins>
                                <plugin>
                                    <groupId>org.jacoco</groupId>
                                    <artifactId>jacoco-maven-plugin</artifactId>
                                    <executions>
                                        <execution>
                                            <id>default-report</id>
                                            <inputs>
                                                <fileSets>
                                                    <fileSet>
                                                        <name>dataFile</name>
                                                    </fileSet>
                                                </fileSets>
                                                <properties>
                                                    <property>
                                                        <name>footer</name>
                                                    </property>
                                                    <property>
                                                        <name>includes</name>
                                                    </property>
                                                    <property>
                                                        <name>outputEncoding</name>
                                                    </property>
                                                    <property>
                                                        <name>skip</name>
                                                    </property>
                                                    <property>
                                                        <name>sourceEncoding</name>
                                                    </property>
                                                    <property>
                                                        <name>title</name>
                                                    </property>
                                                </properties>
                                                <ignoredProperties>
                                                    <ignore>project</ignore>
                                                </ignoredProperties>
                                            </inputs>
                                            <iteratedProperties>
                                                <property>
                                                    <name>formats</name>
                                                </property>
                                            </iteratedProperties>
                                            <outputs>
                                                <directories>
                                                    <directory>
                                                        <name>outputDirectory</name>
                                                    </directory>
                                                </directories>
                                                <cacheableBecause>Faster to retrieve report from cache</cacheableBecause>
                                            </outputs>
                                        </execution>
                                        <execution>
                                            <id>default-report-aggregate</id>
                                            <inputs>
                                                <properties>
                                                    <property>
                                                        <name>dataFileIncludes</name>
                                                    </property>
                                                    <property>
                                                        <name>dataFileExcludes</name>
                                                    </property>
                                                    <property>
                                                        <name>footer</name>
                                                    </property>
                                                    <property>
                                                        <name>includeCurrentProject</name>
                                                    </property>
                                                    <property>
                                                        <name>includes</name>
                                                    </property>
                                                    <property>
                                                        <name>outputEncoding</name>
                                                    </property>
                                                    <property>
                                                        <name>skip</name>
                                                    </property>
                                                    <property>
                                                        <name>sourceEncoding</name>
                                                    </property>
                                                    <property>
                                                        <name>title</name>
                                                    </property>
                                                </properties>
                                                <ignoredProperties>
                                                    <ignore>project</ignore>
                                                </ignoredProperties>
                                            </inputs>
                                            <iteratedProperties>
                                                <property>
                                                    <name>formats</name>
                                                </property>
                                                <property>
                                                    <name>reactorProjects</name>
                                                    <nestedProperties>
                                                        <property>
                                                            <name>model</name>
                                                            <inputs>
                                                                <properties>
                                                                    <property>
                                                                        <name>version</name>
                                                                    </property>
                                                                    <property>
                                                                        <name>groupId</name>
                                                                    </property>
                                                                    <property>
                                                                        <name>artifactId</name>
                                                                    </property>
                                                                </properties>
                                                            </inputs>
                                                        </property>
                                                    </nestedProperties>
                                                    <inputs>
                                                        <fileSets>
                                                            <fileSet>
                                                                <name>file</name>
                                                            </fileSet>
                                                        </fileSets>
                                                    </inputs>
                                                </property>
                                            </iteratedProperties>
                                            <outputs>
                                                <directories>
                                                    <directory>
                                                        <name>outputDirectory</name>
                                                    </directory>
                                                </directories>
                                                <cacheableBecause>Faster to retrieve report from cache</cacheableBecause>
                                            </outputs>
                                        </execution>
                                    </executions>
                                    <inputs>
                                        <properties>
                                            <property>
                                                <name>excludes</name>
                                            </property>
                                        </properties>
                                    </inputs>
                                </plugin>
                            </plugins>
                        </gradleEnterprise>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>