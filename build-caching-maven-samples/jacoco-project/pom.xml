<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd https://www.gradle.com/gradle-enterprise-maven-project https://www.gradle.com/schema/gradle-enterprise-maven-project.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>jacoco-project</artifactId>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.example</groupId>
        <artifactId>gradle-enterprise-maven-caching-sample</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.10</version>
                <executions>
                    <execution>
                        <id>default-prepare-agent</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>default-report</id>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>default-check</id>
                        <goals>
                            <goal>check</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <rule>
                                    <element>BUNDLE</element>
                                    <limits>
                                        <limit>
                                            <counter>COMPLEXITY</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>0.70</minimum>
                                        </limit>
                                    </limits>
                                </rule>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.gradle</groupId>
                    <artifactId>gradle-enterprise-maven-extension</artifactId>
                    <configuration>
                        <gradleEnterprise xmlns="https://www.gradle.com/gradle-enterprise-maven-project">
                            <plugins>
                                <plugin>
                                    <groupId>org.jacoco</groupId>
                                    <artifactId>jacoco-maven-plugin</artifactId>
                                    <executions>
                                        <execution>
                                            <id>default-report</id>
                                            <inputs>
                                                <fileSets>
                                                    <fileSet>
                                                        <name>dataFile</name>
                                                    </fileSet>
                                                </fileSets>
                                                <properties>
                                                    <property>
                                                        <name>excludes</name>
                                                    </property>
                                                    <property>
                                                        <name>footer</name>
                                                    </property>
                                                    <property>
                                                        <name>includes</name>
                                                    </property>
                                                    <property>
                                                        <name>outputEncoding</name>
                                                    </property>
                                                    <property>
                                                        <name>skip</name>
                                                    </property>
                                                    <property>
                                                        <name>sourceEncoding</name>
                                                    </property>
                                                    <property>
                                                        <name>title</name>
                                                    </property>
                                                </properties>
                                            </inputs>
                                            <nestedProperties>
                                                <property>
                                                    <name>project</name>
                                                    <nestedProperties>
                                                        <property>
                                                            <name>artifactId</name>
                                                        </property>
                                                        <property>
                                                            <name>build</name>
                                                            <nestedProperties>
                                                                <property>
                                                                    <name>outputDirectory</name>
                                                                </property>
                                                            </nestedProperties>
                                                        </property>
                                                    </nestedProperties>
                                                </property>
                                            </nestedProperties>
                                            <iteratedProperties>
                                                <property>
                                                    <name>formats</name>
                                                </property>
                                            </iteratedProperties>
                                            <outputs>
                                                <directories>
                                                    <directory>
                                                        <name>outputDirectory</name>
                                                    </directory>
                                                </directories>
                                                <cacheableBecause>report generation is CPU-bound</cacheableBecause>
                                            </outputs>
                                        </execution>
                                    </executions>
                                </plugin>
                            </plugins>
                        </gradleEnterprise>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>