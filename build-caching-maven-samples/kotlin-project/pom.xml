<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>kotlin-project</artifactId>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.example</groupId>
        <artifactId>gradle-enterprise-maven-caching-sample</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <properties>
        <kotlin.version>1.8.0</kotlin.version>
        <junit-jupiter.version>5.9.2</junit-jupiter.version>
        <kotlin.compiler.incremental>true</kotlin.compiler.incremental>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-stdlib</artifactId>
            <version>${kotlin.version}</version>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <version>${junit-jupiter.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <version>${junit-jupiter.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>${project.basedir}/src/main/kotlin</sourceDirectory>
        <testSourceDirectory>${project.basedir}/src/test/kotlin</testSourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.jetbrains.kotlin</groupId>
                <artifactId>kotlin-maven-plugin</artifactId>
                <version>${kotlin.version}</version>
                <executions>
                    <execution>
                        <id>compile</id>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>test-compile</id>
                        <goals>
                            <goal>test-compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.gradle</groupId>
                    <artifactId>gradle-enterprise-maven-extension</artifactId>
                    <configuration>
                        <gradleEnterprise xmlns="https://www.gradle.com/gradle-enterprise-maven-project">
                            <plugins>
                                <plugin>
                                    <groupId>org.jetbrains.kotlin</groupId>
                                    <artifactId>kotlin-maven-plugin</artifactId>
                                    <executions>
                                        <execution>
                                            <id>compile</id>
                                            <outputs>
                                                <cacheableBecause>compilation is CPU-bound</cacheableBecause>
                                            </outputs>
                                        </execution>
                                        <execution>
                                            <id>test-compile</id>
                                            <inputs>
                                                <fileSets>
                                                    <fileSet>
                                                        <name>defaultSourceDirs</name>
                                                    </fileSet>
                                                    <fileSet>
                                                        <name>defaultSourceDir</name>
                                                    </fileSet>
                                                </fileSets>
                                                <properties>
                                                    <property>
                                                        <name>skip</name>
                                                    </property>
                                                </properties>
                                            </inputs>
                                            <outputs>
                                                <cacheableBecause>compilation is CPU-bound</cacheableBecause>
                                            </outputs>
                                        </execution>
                                    </executions>
                                    <inputs>
                                        <fileSets>
                                            <fileSet>
                                                <name>sourceDirs</name>
                                            </fileSet>
                                            <fileSet>
                                                <name>classpath</name>
                                                <normalization>COMPILE_CLASSPATH</normalization>
                                            </fileSet>
                                            <fileSet>
                                                <name>testClasspath</name>
                                                <normalization>COMPILE_CLASSPATH</normalization>
                                            </fileSet>
                                        </fileSets>
                                        <properties>
                                            <property>
                                                <name>compilerPlugins</name>
                                            </property>
                                            <property>
                                                <name>pluginOptions</name>
                                            </property>
                                            <property>
                                                <name>multiPlatform</name>
                                            </property>
                                            <property>
                                                <name>languageVersion</name>
                                            </property>
                                            <property>
                                                <name>apiVersion</name>
                                            </property>
                                            <property>
                                                <name>experimentalCoroutines</name>
                                            </property>
                                            <property>
                                                <name>args</name>
                                            </property>
                                            <property>
                                                <name>jvmTarget</name>
                                            </property>
                                            <property>
                                                <name>moduleName</name>
                                            </property>
                                            <property>
                                                <name>testModuleName</name>
                                            </property>
                                            <property>
                                                <name>jdkHome</name>
                                            </property>
                                            <property>
                                                <name>scriptTemplates</name>
                                            </property>
                                            <property>
                                                <name>javaParameters</name>
                                            </property>
                                            <property>
                                                <name>myIncremental</name>
                                            </property>
                                        </properties>
                                        <ignoredProperties>
                                            <ignore>module</ignore>
                                            <ignore>testModule</ignore>
                                            <ignore>nowarn</ignore>
                                            <ignore>mojoExecution</ignore>
                                            <ignore>project</ignore>
                                        </ignoredProperties>
                                    </inputs>
                                    <outputs>
                                        <directories>
                                            <directory>
                                                <name>output</name>
                                            </directory>
                                            <directory>
                                                <name>testOutput</name>
                                            </directory>
                                        </directories>
                                    </outputs>
                                    <localState>
                                        <fileSets>
                                            <fileSet>
                                                <name>incrementalCachesRoot</name>
                                            </fileSet>
                                        </fileSets>
                                    </localState>
                                </plugin>
                            </plugins>
                        </gradleEnterprise>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>


</project>
