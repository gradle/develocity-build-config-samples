<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>spring-cloud-contract-project</artifactId>
  <packaging>jar</packaging>

  <parent>
    <groupId>com.example</groupId>
    <artifactId>gradle-enterprise-maven-caching-sample</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <dependencies>
    <dependency>
      <groupId>org.springframework.cloud</groupId>
      <artifactId>spring-cloud-starter-contract-verifier</artifactId>
      <version>3.0.4</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.springframework.cloud</groupId>
        <artifactId>spring-cloud-contract-maven-plugin</artifactId>
        <version>3.1.0</version>
        <extensions>true</extensions>
        <configuration></configuration>
      </plugin>
      <!-- When resolving from cache, need to explicitly register generated test sources -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>3.2.0</version>
        <executions>
          <execution>
            <phase>generate-test-sources</phase>
            <goals>
              <goal>add-test-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>target/generated-test-sources/contracts</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- We don't have a real app, so generate the contract tests, but skip running them -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <skipTests>true</skipTests>
        </configuration>
      </plugin>
    </plugins>

    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>com.gradle</groupId>
          <artifactId>gradle-enterprise-maven-extension</artifactId>
          <configuration>
            <gradleEnterprise>
              <plugins>
                <plugin>
                  <groupId>org.springframework.cloud</groupId>
                  <artifactId>spring-cloud-contract-maven-plugin</artifactId>
                  <executions>
                    <execution>
                      <id>default-generateTests</id>
                      <inputs>
                        <fileSets>
                          <fileSet>
                            <name>contractsDirectory</name>
                            <excludesProperty>excludedFiles</excludesProperty>
                            <includesProperty>includedFiles</includesProperty>
                          </fileSet>
                        </fileSets>
                        <ignoredProperties>
                          <ignore>contractsRepositoryPassword</ignore>
                          <ignore>contractsRepositoryProxyHost</ignore>
                          <ignore>contractsRepositoryProxyPort</ignore>
                          <ignore>contractsRepositoryUsername</ignore>
                          <ignore>project</ignore>
                          <ignore>session</ignore>
                          <ignore>repoSession</ignore>
                          <ignore>incrementalContractTests</ignore>
                          <ignore>mojoExecution</ignore>
                        </ignoredProperties>
                        <properties>
                          <property>
                            <name>assertJsonSize</name>
                          </property>
                          <property>
                            <name>baseClassForTests</name>
                          </property>
                          <property>
                            <name>basePackageForTests</name>
                          </property>
                          <property>
                            <name>contractsMode</name>
                          </property>
                          <property>
                            <name>contractsPath</name>
                          </property>
                          <property>
                            <name>contractsProperties</name>
                          </property>
                          <property>
                            <name>contractsRepositoryUrl</name>
                          </property>
                          <property>
                            <name>deleteStubsAfterTest</name>
                          </property>
                          <property>
                            <name>failOnInProgress</name>
                          </property>
                          <property>
                            <name>failOnNoContracts</name>
                          </property>
                          <property>
                            <name>ignoredFiles</name>
                          </property>
                          <property>
                            <name>imports</name>
                          </property>
                          <property>
                            <name>mavenTestSkip</name>
                          </property>
                          <property>
                            <name>nameSuffixForTests</name>
                          </property>
                          <property>
                            <name>packageWithBaseClasses</name>
                          </property>
                          <property>
                            <name>ruleClassForTests</name>
                          </property>
                          <property>
                            <name>skip</name>
                          </property>
                          <property>
                            <name>skipTests</name>
                          </property>
                          <property>
                            <name>staticImports</name>
                          </property>
                          <property>
                            <name>testFramework</name>
                          </property>
                          <property>
                            <name>testMode</name>
                          </property>
                        </properties>
                      </inputs>
                      <iteratedProperties>
                        <property>
                          <name>baseClassMappings</name>
                          <inputs>
                            <properties>
                              <property>
                                <name>baseClassFQN</name>
                              </property>
                              <property>
                                <name>contractPackageRegex</name>
                              </property>
                            </properties>
                          </inputs>
                        </property>
                      </iteratedProperties>
                      <nestedProperties>
                        <property>
                          <name>contractDependency</name>
                          <inputs>
                            <properties>
                              <property>
                                <name>artifactId</name>
                              </property>
                              <property>
                                <name>groupId</name>
                              </property>
                              <property>
                                <name>version</name>
                              </property>
                            </properties>
                          </inputs>
                        </property>
                      </nestedProperties>
                      <outputs>
                        <cacheableBecause>generateTests may produce randomized contract test cases</cacheableBecause>
                        <directories>
                          <directory>
                            <name>generatedTestSourcesDir</name>
                          </directory>
                          <directory>
                            <name>generatedTestResourcesDir</name>
                          </directory>
                        </directories>
                      </outputs>
                    </execution>
                  </executions>
                </plugin>
              </plugins>
            </gradleEnterprise>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>
