<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>enforcer-project</artifactId>
  <packaging>jar</packaging>

  <parent>
    <groupId>com.example</groupId>
    <artifactId>gradle-enterprise-maven-caching-sample</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <version>3.0.0-M3</version>

        <executions>
          <!-- All fast rules can be in a single, uncached execution -->
          <execution>
            <id>enforce-fast-rules</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <rules>
                <requireJavaVersion>
                  <version>1.8</version>
                </requireJavaVersion>
              </rules>
            </configuration>
          </execution>
          <!-- Split the slow enforcer rules into their own execution -->
          <execution>
            <id>enforce-bytecode-version</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <rules>
                <enforceBytecodeVersion>
                  <maxJdkVersion>1.7</maxJdkVersion>
                </enforceBytecodeVersion>
              </rules>
              <fail>true</fail>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>extra-enforcer-rules</artifactId>
            <version>1.3</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>com.gradle</groupId>
          <artifactId>gradle-enterprise-maven-extension</artifactId>
          <configuration>
            <gradleEnterprise>
              <plugins>
                <plugin>
                  <groupId>org.apache.maven.plugins</groupId>
                  <artifactId>maven-enforcer-plugin</artifactId>
                  <executions>
                    <execution>
                      <id>enforce-bytecode-version</id>
                      <inputs>
                        <ignoredProperties>
                          <ignore>commandLineRules</ignore>
                          <ignore>fail</ignore>
                          <ignore>failFast</ignore>
                          <ignore>ignoreCache</ignore>
                          <ignore>mojoExecution</ignore>
                          <ignore>session</ignore>
                          <ignore>skip</ignore>
                        </ignoredProperties>
                      </inputs>
                      <iteratedProperties>
                        <property>
                          <name>rules</name>
                          <inputs>
                            <properties>
                              <property>
                                <name>maxJdkVersion</name>
                              </property>
                              <property>
                                <name>maxJavaMajorVersionNumber</name>
                              </property>
                              <property>
                                <name>ignoredScopes</name>
                              </property>
                              <property>
                                <name>ignoreClasses</name>
                              </property>
                              <property>
                                <name>ignoreOptionals</name>
                              </property>
                              <property>
                                <name>excludes</name>
                              </property>
                            </properties>
                          </inputs>
                        </property>
                      </iteratedProperties>
                      <nestedProperties>
                        <property>
                          <name>project</name>
                          <iteratedProperties>
                            <property>
                              <name>artifacts</name>
                              <inputs>
                                <fileSets>
                                  <fileSet>
                                    <name>file</name>
                                    <normalization>COMPILE_CLASSPATH</normalization>
                                  </fileSet>
                                </fileSets>
                              </inputs>
                            </property>
                          </iteratedProperties>
                        </property>
                      </nestedProperties>
                      <outputs>
                        <cacheableBecause>it's slow</cacheableBecause>
                      </outputs>
                    </execution>
                  </executions>
                </plugin>
              </plugins>
            </gradleEnterprise>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
